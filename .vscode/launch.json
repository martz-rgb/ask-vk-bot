{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Go Containerized Debug",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 4000,
            "host": "127.0.0.1"
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/",
            "env": {
                "ASK_TIMEZONE": "3",
                "ASK_DEADLINE": "42d",
                "ASK_RESERVATION_DURATION": "7d",
                "ASK_POLL_HASHTAG": "#Poll@no_escape",
                "ASK_GREETING_HASHTAG": "#Greeting@no_escape",
                "ASK_FREE_ANSWER_HASHTAG": "#FreeAnswer@no_escape",
                "ASK_LEAVING_HASHTAG": "#Leaving@no_escape"
            }
        },
    ]
}